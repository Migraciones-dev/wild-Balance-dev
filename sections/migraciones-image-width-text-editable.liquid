<section
  id="section-{{ section.id }}"
  class="w-full"
  style="
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.pt_mobile }}px;
    padding-bottom: {{ section.settings.pb_mobile }}px;
    margin-top: {{ section.settings.mt_mobile }}px;
    margin-bottom: {{ section.settings.mb_mobile }}px;
  "
>
  <style>
    @media (min-width: 1024px) {
      #section-{{ section.id }} {
        padding-top: {{ section.settings.pt_desktop }}px !important;
        padding-bottom: {{ section.settings.pb_desktop }}px !important;
        margin-top: {{ section.settings.mt_desktop }}px !important;
        margin-bottom: {{ section.settings.mb_desktop }}px !important;
      }
    }

    #section-{{ section.id }} .title {
      color: {{ section.settings.title_color }};
    }

    #section-{{ section.id }} .description {
      color: {{ section.settings.text_color }};
    }

    #section-{{ section.id }} .cta-button {
      background-color: {{ section.settings.button_bg_color }};
      color: {{ section.settings.button_text_color }};
    }

    #section-{{ section.id }} .cta-button:hover {
      opacity: 0.9;
    }
  </style>

  <div class="flex items-center justify-center gap-[29px] mx-auto px-6 lg:px-10">
    <div class="flex items-center gap-[66px] mx-auto flex-col lg:flex-row max-w-[1600px] lg:gap-[66px] gap-12">
      <!-- Imagen -->
      <!-- Imagen -->
      {% if section.settings.image != blank %}
        <div class="relative w-full lg:w-2/5 rounded-[10px] overflow-hidden {% if section.settings.image_position == 'right' %}lg:order-2{% endif %}">
          <!-- Imagen desktop (ajusta automáticamente su altura) -->
          <div
            class="hidden lg:flex w-full bg-cover bg-center bg-no-repeat items-center justify-center rounded-[10px]"
            style="background-image: url('{{ section.settings.image | img_url: '800x' }}'); aspect-ratio: 3/4;"
          ></div>

          <!-- Imagen móvil -->
          <img
            class="lg:hidden w-full rounded-[10px]"
            alt="{{ section.settings.image.alt | escape }}"
            src="{{ section.settings.image | img_url: '800x' }}"
            loading="lazy"
          >
        </div>
      {% endif %}

      <!-- Contenido -->
      <div class="flex flex-col w-full lg:w-3/5 items-start gap-6 lg:gap-[39px]">
        <div class="flex flex-col items-start gap-6 lg:gap-[39px] w-full">
          <div class="flex flex-col items-start gap-[30px] w-full">
            <div class="flex flex-col items-start gap-6 w-full">
              {% if section.settings.brand_logo != blank %}
                <div class="flex flex-col items-center gap-2.5 relative overflow-hidden">
                  <img
                    class="relative h-[27px] sm:h-[37px] lg:h-[47px]"
                    alt="{{ section.settings.brand_logo.alt | escape }}"
                    src="{{ section.settings.brand_logo | img_url: '300x' }}"
                    loading="lazy"
                  >
                </div>
              {% endif %}

              <h2 class="title [font-family:'Barlow',Helvetica] font-extrabold text-[30px] sm:text-[38px] md:text-[44px] lg:text-[57px] xl:text-[64px] leading-[1]">
                {{ section.settings.title }}
              </h2>
            </div>

            {% if section.settings.description != blank %}
              <div class="description w-full [font-family:'DM_Sans_18pt-Regular',Helvetica] font-normal tracking-[0] leading-[26.1px] text-[14px] sm:text-[16px] lg:text-[18px]">
                {{ section.settings.description }}
              </div>
            {% endif %}
          </div>

          {% if section.settings.show_badge %}
            <div class="flex items-center gap-2">
              <div class="flex items-start relative">
                {% if section.settings.badge_image != blank %}
                  <img
                    class="relative h-[92px]"
                    alt="{{ section.settings.badge_image.alt | escape }}"
                    src="{{ section.settings.badge_image | img_url: '150x' }}"
                    loading="lazy"
                  >
                {% endif %}
              </div>
              <div class="flex flex-col items-start">
                <div class="font-bold text-[13px] lg:text-[14px]">{{ section.settings.badge_title }}</div>
                <div class="text-[#222222] text-[13px] lg:text-[14px] -mt-2">{{ section.settings.badge_subtitle }}</div>
              </div>
            </div>
          {% endif %}
        </div>

        {% if section.settings.button_text != blank %}
          <a
            {% if section.settings.button_link != blank %}
              href="{{ section.settings.button_link }}"
            {% endif %}
            {% if section.settings.button_new_tab %}
              target="_blank"
            {% endif %}
            class="cta-button shadow h-9 inline-flex items-center justify-center gap-2.5 py-8 px-12 rounded-[50px] hover:opacity-90 transition-opacity max-sm:w-full md:w-auto text-[18px]"
          >
            <span class="[font-family:'DM_Sans_18pt-SemiBold',Helvetica] font-semibold text-[18px]">
              {{ section.settings.button_text }}
            </span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-[15px] h-[15px] ml-2"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14M12 5l7 7-7 7" />
            </svg>
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Imagen + Texto",
  "settings": [
    {
      "type": "header",
      "content": "Imagen"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen principal"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Posición de la imagen (desktop)",
      "options": [
        {
          "value": "left",
          "label": "Izquierda"
        },
        {
          "value": "right",
          "label": "Derecha"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Contenido"
    },
    {
      "type": "image_picker",
      "id": "brand_logo",
      "label": "Logo de marca (opcional)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Asesoramiento nutricional experto"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Descripción",
      "default": "<p>En Wild Balance te ofrecemos asesoramiento nutricional personalizado para mejorar la salud y bienestar de tu mascota.</p>"
    },
    {
      "type": "header",
      "content": "Badge (insignia)"
    },
    {
      "type": "checkbox",
      "id": "show_badge",
      "label": "Mostrar badge",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "badge_image",
      "label": "Imagen del badge"
    },
    {
      "type": "text",
      "id": "badge_title",
      "label": "Título del badge",
      "default": "+100.000 Mascotas contentas"
    },
    {
      "type": "text",
      "id": "badge_subtitle",
      "label": "Subtítulo del badge",
      "default": "Para perros y gatos"
    },
    {
      "type": "header",
      "content": "Botón CTA"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "Escríbenos"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del botón"
    },
    {
      "type": "checkbox",
      "id": "button_new_tab",
      "label": "Abrir en nueva pestaña",
      "default": true
    },
    {
      "type": "header",
      "content": "Colores"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Color de fondo",
      "default": "#F4F0E2"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Color del título",
      "default": "#004623"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#222222"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Color de fondo del botón",
      "default": "#ffcd00"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Color del texto del botón",
      "default": "#004623"
    },
    {
      "type": "header",
      "content": "Espaciado - Desktop"
    },
    {
      "type": "range",
      "id": "pt_desktop",
      "label": "Padding superior",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "pb_desktop",
      "label": "Padding inferior",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "mt_desktop",
      "label": "Margen superior",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "mb_desktop",
      "label": "Margen inferior",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 80
    },
    {
      "type": "header",
      "content": "Espaciado - Móvil"
    },
    {
      "type": "range",
      "id": "pt_mobile",
      "label": "Padding superior",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "pb_mobile",
      "label": "Padding inferior",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "mt_mobile",
      "label": "Margen superior",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "mb_mobile",
      "label": "Margen inferior",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Imagen + Texto",
      "settings": {
        "title": "Asesoramiento nutricional experto",
        "button_text": "Escríbenos"
      }
    }
  ]
}
{% endschema %}
