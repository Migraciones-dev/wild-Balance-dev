      </div>
    </div>
  </div>

  <!-- Botón -->
  <a
    href="/pages/crea-su-menu"
    class="
      shadow h-9 inline-flex items-center justify-center gap-2.5 py-8 px-12 bg-[#ffcd00] rounded-[50px] text-[#004623] hover:bg-[#ffcd00]/90
