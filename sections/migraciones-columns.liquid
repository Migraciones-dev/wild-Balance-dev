    <a href="/pages/crea-su-menu" class="hidden md:grid grid-cols-3 gap-6 sm:px-10">
      <!-- Card 1 -->
      <div class="flex flex-col">
        <div class="relative">
          <div class="border bg-card text-card-foreground shadow w-full h-[293px] rounded-lg overflow-hidden">
