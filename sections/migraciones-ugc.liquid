<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Init Swiper (si no está ya)
    new Swiper('.ugc-carousel', {
      loop: false,
      spaceBetween: 16,
      navigation: { nextEl: '.ugc-next-button', prevEl: '.ugc-prev-button' },
      breakpoints: { 0: { slidesPerView: 1.35 }, 768: { slidesPerView: 3 }, 1024: { slidesPerView: 4 } },
      touchRatio: 1,
    });

    document.querySelectorAll('.ugc-video-wrapper').forEach((wrapper) => {
      const video = wrapper.querySelector('video');
      const overlay = wrapper.querySelector('.ugc-video-overlay');

      // click overlay → arranca el vídeo y oculta overlay
      overlay.addEventListener('click', (e) => {
        e.stopPropagation();
        overlay.style.display = 'none';
        video.play();
      });

      // click en el vídeo → si está reproduciendo lo pausas, si está pausado lo reproduces
      video.addEventListener('click', () => {
        if (video.paused) {
          video.play();
        } else {
          video.pause();
        }
      });

      // cuando empiece el vídeo → oculta overlay
      video.addEventListener('play', () => {
        overlay.style.display = 'none';
      });

      // cuando se pause o termine → muestra overlay
      video.addEventListener('pause', () => {
        overlay.style.display = 'flex';
      });
      video.addEventListener('ended', () => {
        overlay.style.display = 'flex';
      });
    });
  });
</script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    // (suponiendo que ya tienes Swiper y la lógica de overlay/play-pause aquí)

    // Selecciona todos los vídeos de tu carrusel
    const allVideos = Array.from(document.querySelectorAll('.ugc-video-wrapper video'));

    // Para cada vídeo, añade un listener en 'play'
    allVideos.forEach((video) => {
      video.addEventListener('play', () => {
        // Cuando este vídeo empiece a reproducirse, pausamos todos los demás
        allVideos.forEach((other) => {
          if (other !== video) {
            other.pause();
          }
        });
      });
    });
  });
</script>

