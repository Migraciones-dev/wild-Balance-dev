      class="shadow h-9 inline-flex items-center justify-center gap-2.5 py-8 px-12 rounded-[50px] btn-primary max-sm:w-[91%] md:w-1/2 lg:w-auto text-[18px] [@media(max-width:1024px)]:mx-6"
