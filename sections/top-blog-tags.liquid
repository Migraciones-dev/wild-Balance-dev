{%- comment -%}
  Snippet: blog-tags-filter
  Recorre todas las tags del blog actual y muestra botones estilo píldora
  - Botón "Todos" incluido
  - Activo = verde #004623 fondo sólido + texto blanco
  - Inactivo = borde verde + texto verde + fondo blanco
{%- endcomment -%}
<div class="!bg-[#F4F0E2] [@media(max-width:1024px)]:!hidden py-[80px]">
  <ul class="flex flex-wrap gap-4 t4s-container">
    <!-- Botón "Todos" -->
    <li>
      <a
        href="{{ blog.url }}"
        style="border: 1px solid #004623; background: transparent;"
        class="
            px-12 py-6 rounded-full border transition
            {% unless current_tags %} !bg-[#004623] !text-white border-[#004623] {% else %} border-[#004623] text-[#004623] bg-white hover:!bg-[#004623] hover:!text-white {% endunless %}
          font-medium
        "
      >
        Todos
      </a>
    </li>

    <!-- Tags del blog -->
    {%- for tag in blog.all_tags -%}
      <li>
        <a
          href="{{ blog.url }}/tagged/{{ tag | handle }}"
          style="border: 1px solid #004623; background: transparent;"
          class="
              px-12 py-6 rounded-full border transition !border !border-[#004623] text-[#004623] hover:bg-[#004623]/10
              {% if current_tags contains tag %} !bg-[#004623] !text-white border-[#004623] {% else %} border-[#004623] text-[#004623] bg-white hover:!bg-[#004623] hover:!text-white {% endif %}
            font-medium
          "
        >
          {{ tag | remove: 'blog_' | strip }}
        </a>
      </li>
    {%- endfor -%}
  </ul>
</div>

{% schema %}
{
  "name": "Filter tags",
  "tag": "section",
  "class": "t4s-section t4s-section-main t4s-blog-tags",
  "settings": [
    {
      "type": "header",
      "content": "1.General options"
    },
    {
      "type": "radio",
      "id": "source",
      "default": "1",
      "label": "Show all \/ Manually block",
      "options": [
        {
          "value": "1",
          "label": "Show all"
        },
        {
          "value": "2",
          "label": "From tags contains 'blog_'"
        },
        {
          "value": "3",
          "label": "Manually block"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_count",
      "label": "Show count",
      "info": "Count only show all. Not working manually block,from tags contains 'blog_'",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enable_border",
      "label": "Enable border",
      "default": true
    },
    {
      "type": "header",
      "content": "2.Design options"
    },
    {
      "type": "select",
      "id": "layout",
      "default": "t4s-container-wrap",
      "label": "Layout",
      "options": [
        { "value": "t4s-se-container", "label": "Container" },
        { "value": "t4s-container-wrap", "label": "Wrapped container" },
        { "value": "t4s-container-fluid", "label": "Full width" }
      ]
    },
    {
      "type": "range",
      "id": "mgb",
      "label": "Bottom space (Desktop)",
      "max": 100,
      "min": 0,
      "step": 1,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "mgb_mb",
      "label": "Bottom space (Mobile)",
      "max": 100,
      "min": 0,
      "step": 1,
      "unit": "px",
      "default": 50
    }
  ],
  "blocks": [
    {
      "type": "tag",
      "name": "Tag",
      "limit": 10,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Tag name"
        }
      ]
    }
  ]
}
{% endschema %}
