<section
  id="section-{{ section.id }}"
  class="w-full"
  style="
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.pt_mobile }}px;
    padding-bottom: {{ section.settings.pb_mobile }}px;
  "
>
  <style>
    @media (min-width: 768px) {
      #section-{{ section.id }} {
        padding-top: {{ section.settings.pt_desktop }}px !important;
        padding-bottom: {{ section.settings.pb_desktop }}px !important;
      }
    }

    /* Grid din谩mico seg煤n configuraci贸n */
    .benefits-grid {
      display: grid;
      gap: {{ section.settings.gap_mobile }}px;
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
    }

    @media (min-width: 640px) {
      .benefits-grid {
        gap: {{ section.settings.gap_tablet }}px;
        grid-template-columns: repeat({{ section.settings.columns_tablet }}, 1fr);
      }
    }

    @media (min-width: 1024px) {
      .benefits-grid {
        gap: {{ section.settings.gap_desktop }}px;
        grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
      }
    }

    /* Estilos de cada item */
    .benefit-item {
      display: flex;
      align-items: center;
      gap: {{ section.settings.item_gap_mobile }}px;
      /* M贸vil: columna (icono arriba, texto abajo) */
      flex-direction: column;
      text-align: center;
    }

    /* Desktop: fila (icono izquierda, texto derecha) */
    @media (min-width: 1024px) {
      .benefit-item {
        flex-direction: row;
        gap: {{ section.settings.item_gap_desktop }}px;
        text-align: left;
      }
    }

    .benefit-item img {
      width: {{ section.settings.icon_size }}px;
      height: {{ section.settings.icon_size }}px;
      object-fit: contain;
      flex-shrink: 0;
    }

    .benefit-item .benefit-text {
      color: {{ section.settings.text_color }};
      font-size: {{ section.settings.text_size_mobile }}px;
      line-height: 1.4;
    }

    @media (min-width: 1024px) {
      .benefit-item .benefit-text {
        font-size: {{ section.settings.text_size_desktop }}px;
      }
    }
  </style>

  <div class="max-w-[1600px] mx-auto px-6 lg:px-10">
    <div class="benefits-grid">
      {% for block in section.blocks %}
        {% if block.type == 'benefit' %}
          <div class="benefit-item" {{ block.shopify_attributes }}>
            {% if block.settings.icon %}
              <img
                src="{{ block.settings.icon | img_url: '200x' }}"
                alt="{{ block.settings.text | escape }}"
                loading="lazy"
              >
            {% endif %}
            <span class="benefit-text">{{ block.settings.text }}</span>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

