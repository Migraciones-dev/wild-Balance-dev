<section
  id="section-{{ section.id }}"
  class="w-full"
  style="
    background-color: {{ section.settings.bg_color }};
    margin-top: {{ section.settings.mt_mobile }}px;
    margin-bottom: {{ section.settings.mb_mobile }}px;
  "
>
  <style>
    @media (min-width: 768px) {
      #section-{{ section.id }} {
        margin-top: {{ section.settings.mt_desktop }}px !important;
        margin-bottom: {{ section.settings.mb_desktop }}px !important;
      }

      #section-{{ section.id }} .banner-image {
        border-radius: {{ section.settings.border_radius_desktop }}px !important;
      }
    }

    @media (max-width: 767px) {
      #section-{{ section.id }} .banner-image {
        border-radius: {{ section.settings.border_radius_mobile }}px !important;
      }
    }
  </style>

  {%- if section.settings.desktop_image or section.settings.mobile_image -%}
    {%- comment -%} Imagen escritorio {%- endcomment -%}
    {% if section.settings.desktop_image %}
      {% if section.settings.image_link != blank %}<a href="{{ section.settings.image_link }}">{% endif %}
      <img
        src="{{ section.settings.desktop_image | image_url: '2048x' }}"
        class="banner-image hidden md:block w-full h-auto object-cover"
        alt="{{ section.settings.desktop_image.alt | escape }}"
        loading="lazy"
      >
      {% if section.settings.image_link != blank %}</a>{% endif %}
    {% endif %}

    {%- comment -%} Imagen móvil {%- endcomment -%}
    {% if section.settings.mobile_image %}
      {% if section.settings.image_link != blank %}<a href="{{ section.settings.image_link }}">{% endif %}
      <img
        src="{{ section.settings.mobile_image | image_url: '1024x' }}"
        class="banner-image block md:hidden w-full h-auto object-cover"
        alt="{{ section.settings.mobile_image.alt | escape }}"
        loading="lazy"
      >
      {% if section.settings.image_link != blank %}</a>{% endif %}
    {% endif %}
  {%- endif -%}
</section>

{% schema %}
{
  "name": "Banner imagen responsivo",
  "settings": [
    {
      "type": "header",
      "content": "Imágenes"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Imagen escritorio"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Imagen móvil"
    },
    {
      "type": "url",
      "id": "image_link",
      "label": "Enlace de la imagen"
    },
    {
      "type": "header",
      "content": "Border Radius"
    },
    {
      "type": "range",
      "id": "border_radius_desktop",
      "label": "Border radius (Desktop)",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "default": 30
    },
    {
      "type": "range",
      "id": "border_radius_mobile",
      "label": "Border radius (Móvil)",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "default": 12
    },
    {
      "type": "header",
      "content": "Espaciado - Desktop"
    },
    {
      "type": "range",
      "id": "mt_desktop",
      "label": "Margen superior (Desktop)",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "mb_desktop",
      "label": "Margen inferior (Desktop)",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "Espaciado - Móvil"
    },
    {
      "type": "range",
      "id": "mt_mobile",
      "label": "Margen superior (Móvil)",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "mb_mobile",
      "label": "Margen inferior (Móvil)",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "Estilo"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Color de fondo de la sección",
      "default": "#FBF5E7"
    }
  ],
  "presets": [
    {
      "name": "Banner imagen responsivo"
    }
  ]
}
{% endschema %}
